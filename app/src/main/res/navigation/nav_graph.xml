<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.cardsapp.cards.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_articlesFragment"
            app:destination="@id/articlesFragment"
            app:popUpTo="@id/startFragment" />
        <action
            android:id="@+id/action_startFragment_to_addPairFragment"
            app:destination="@id/addPairFragment"
            app:popUpTo="@id/startFragment" />
        <action
            android:id="@+id/action_startFragment_to_allWordsFragment"
            app:destination="@id/allWordsFragment"
            app:popUpTo="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.cardsapp.cards.fragments.ArticlesFragment"
        android:label="fragment_articles"
        tools:layout="@layout/fragment_articles" />
    <fragment
        android:id="@+id/addPairFragment"
        android:name="com.cardsapp.cards.fragments.AddPairFragment"
        android:label="fragment_add_pair"
        tools:layout="@layout/fragment_add_pair" />
    <fragment
        android:id="@+id/allWordsFragment"
        android:name="com.cardsapp.cards.fragments.AllWordsFragment"
        android:label="fragment_all_words"
        tools:layout="@layout/fragment_all_words" />
</navigation>